<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="childWindow" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AjoutJeuController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" text="Ajouter un jeu" textFill="WHITE">
               <font>
                  <Font name="Arial" size="22.0" />
               </font>
            </Label>
            <HBox spacing="10" VBox.vgrow="ALWAYS">
               <children>
                  <VBox spacing="10" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Nom du jeu" textFill="WHITE" />
                        <TextField fx:id="ajoutNom" HBox.hgrow="ALWAYS" />
                        <Label text="Année" textFill="WHITE" />
                        <TextField fx:id="ajoutAnnee" HBox.hgrow="ALWAYS" />
                        <Label text="Descriptif" textFill="WHITE" />
                        <TextArea fx:id="ajoutDescriptif" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox prefHeight="324.0" prefWidth="413.0">
                     <children>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <VBox spacing="10" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Nombre de joueurs Max" textFill="WHITE" />
                                    <TextField fx:id="ajoutJMax" HBox.hgrow="ALWAYS">
                                       <VBox.margin>
                                          <Insets right="10.0" />
                                       </VBox.margin>
                                    </TextField>
                                    <Label text="Age minimum" textFill="WHITE" />
                                    <TextField fx:id="ajoutAgeMin" HBox.hgrow="ALWAYS">
                                       <VBox.margin>
                                          <Insets right="10.0" />
                                       </VBox.margin>
                                    </TextField>
                                    <Label text="Editeur" textFill="WHITE" />
                                    <TextField fx:id="ajoutEditeur" HBox.hgrow="ALWAYS">
                                       <VBox.margin>
                                          <Insets right="10.0" />
                                       </VBox.margin>
                                    </TextField>
                                    <Label text="Nombre" textFill="WHITE" />
                                    <TextField fx:id="ajoutNombre" HBox.hgrow="ALWAYS">
                                       <VBox.margin>
                                          <Insets right="10.0" />
                                       </VBox.margin>
                                    </TextField>
                                 </children>
                              </VBox>
                              <VBox spacing="10" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Nombre de joueurs Min" textFill="WHITE" />
                                    <TextField fx:id="ajoutJMin" HBox.hgrow="ALWAYS">
                                       <VBox.margin>
                                          <Insets right="10.0" />
                                       </VBox.margin>
                                    </TextField>
                                    <Label text="Durée minimum" textFill="WHITE" />
                                    <TextField fx:id="ajoutDureeMin" HBox.hgrow="ALWAYS">
                                       <VBox.margin>
                                          <Insets right="10.0" />
                                       </VBox.margin>
                                    </TextField>
                                    <Label text="Disponible" textFill="WHITE" />
                                    <TextField fx:id="ajoutDisponible" HBox.hgrow="ALWAYS">
                                       <VBox.margin>
                                          <Insets right="10.0" />
                                       </VBox.margin>
                                    </TextField>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="validerCreerJeu" mnemonicParsing="false" onAction="#ajouterJeu" text="Valider">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="annulerCreerJeu" mnemonicParsing="false" onAction="#annulerCreationJeu" text="Retour à la liste des jeux">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10" />
         </children>
      </VBox>
   </children>
</AnchorPane>
